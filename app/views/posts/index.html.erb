<% if flash[:notice_create] %>
   <p class="flash-notice"><%= flash[:notice_create] %></p>
<% end %>
<% if flash[:notice_update] %>
   <p class="flash-notice"><%= flash[:notice_update] %></p>
<% end %>
<% if flash[:notice_destroy] %>
   <p class="flash-notice"><%= flash[:notice_destroy] %></p>
<% end %>
<%= render "shared/partial" %>
<h3>予定一覧</h3>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>消去</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.is_all_day ? '◯': '' %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to "詳細ページ", post_path(post) %></td>
        <td><%= link_to "編集ページ", edit_post_path(post) %></td>
        <td><%= link_to "削除", post, method: :delete, data: { confirm: "削除しますか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "予定の新規登録", :new_post %></p>